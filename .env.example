# Bitrix Server Connection
BITRIX_SERVER_IP=192.168.1.10
BITRIX_SERVER_USER=www-data
BITRIX_UPLOAD_PATH=/var/www/bitrix/upload

# CDN Configuration  
CDN_DOMAIN=cdn.termokit.ru
CDN_SERVER_IP=192.168.1.20
CDN_SERVER_USER=cdn
CDN_RESIZE_PATH=/var/www/cdn/upload/resize_cache

# WebP Conversion Settings
WEBP_QUALITY=85
WEBP_MAX_WIDTH=2048
WEBP_MAX_HEIGHT=2048

# Cache Settings
CACHE_CLEANUP_DAYS=30
CACHE_MAX_SIZE=10G

# Monitoring
ADMIN_EMAIL=info@aachibilyaev.com
GRAFANA_USER=admin
GRAFANA_PASSWORD=TErmokit2024CDN!

# Performance Tuning
NGINX_WORKERS=auto
NGINX_CONNECTIONS=1024
VARNISH_MEMORY=1G

# Docker Environment (добавлено отсутствующее)
CHECK_INTERVAL=300

# Redis Settings
REDIS_MAXMEMORY=512mb
REDIS_PASSWORD=

# SSL Settings
LETSENCRYPT_EMAIL=info@aachibilyaev.com
SSL_CERT_PATH=/etc/letsencrypt/live/cdn.termokit.ru/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/cdn.termokit.ru/privkey.pem

# Debug Mode
DEBUG=0
