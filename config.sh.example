# Конфигурационный файл CDN сервера
# Скопируйте в config.sh и заполните значения

# Сервер Битрикс
BITRIX_SERVER_IP="192.168.1.10"           # IP адрес сервера с Битрикс
BITRIX_SERVER_USER="www-data"             # SSH пользователь на сервере Битрикс
BITRIX_UPLOAD_PATH="/var/www/bitrix/upload" # Путь к папке upload на сервере Битрикс

# CDN настройки
CDN_DOMAIN="cdn.example.com"              # Домен для CDN
CDN_SERVER_IP=""                           # IP этого сервера (автоопределится)

# WebP настройки
WEBP_QUALITY=85                            # Качество WebP (1-100)
WEBP_MAX_WIDTH=2048                        # Максимальная ширина
WEBP_MAX_HEIGHT=2048                       # Максимальная высота
CACHE_CLEANUP_DAYS=30                      # Удалять кеш старше N дней

# Пути
MOUNT_POINT="/mnt/bitrix"                  # Точка монтирования SSHFS
CACHE_DIR="/var/cache/webp"                # Директория кеша WebP
LOG_DIR="/var/log/cdn"                     # Директория логов

# SSH
SSH_KEY_PATH="/root/.ssh/bitrix_mount"     # Путь к SSH ключу

# Мониторинг
ADMIN_EMAIL="admin@example.com"            # Email для алертов
CHECK_INTERVAL=300                         # Интервал проверки в секундах

# NGINX
NGINX_WORKERS="auto"                       # Количество worker процессов
NGINX_CONNECTIONS=1024                     # Максимум соединений на worker

# Системные лимиты
MAX_OPEN_FILES=65535                       # Максимум открытых файлов
SOMAXCONN=65535                           # Размер очереди соединений

# Режим отладки
DEBUG=0                                    # 1 - включить отладку
