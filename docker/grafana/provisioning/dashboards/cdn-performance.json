{
  "id": null,
  "title": "Bitrix CDN Performance Dashboard",
    "tags": ["cdn", "bitrix", "performance"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "5s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
  "panels": [
      {
        "id": 1,
        "title": "CDN Performance Overview",
        "type": "stat",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "nginx_http_requests_total{cdn=\"bitrix\"}",
            "legendFormat": "Total Requests"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "custom": {
              "hideFrom": {"legend": false, "tooltip": false, "vis": false}
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Redis Cache Performance",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "redis_memory_used_bytes{cdn=\"bitrix\"}",
            "legendFormat": "Memory Used"
          },
          {
            "expr": "redis_keys_total{cdn=\"bitrix\"}",
            "legendFormat": "Total Keys"
          }
        ]
      },
      {
        "id": 3,
        "title": "Nginx Cache Hit Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "nginx_cache_hit_rate{cdn=\"bitrix\"}",
            "legendFormat": "Cache Hit Rate"
          }
        ]
      },
      {
        "id": 4,
        "title": "System Resources",
        "type": "graph",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "node_cpu_seconds_total{cdn=\"bitrix\"}",
            "legendFormat": "CPU Usage"
          },
          {
            "expr": "node_memory_MemAvailable_bytes{cdn=\"bitrix\"}",
            "legendFormat": "Available Memory"
          }
        ]
      }
    ]
}